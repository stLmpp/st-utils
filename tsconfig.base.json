{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ESNext"],
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "importHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vitest/globals"]
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
